<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>/WEB-INF/jspSivut/index.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ostasivu</servlet-name>
        <jsp-file>/WEB-INF/jspSivut/osta/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>airosivu</servlet-name>
        <jsp-file>/WEB-INF/jspSivut/osta/varusteet/airo/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ayskarisivu</servlet-name>
        <jsp-file>/WEB-INF/jspSivut/osta/varusteet/ayskari/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>vissysivu</servlet-name>
        <jsp-file>/WEB-INF/jspSivut/osta/varusteet/vissypullo/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>tietoasivu</servlet-name>
        <jsp-file>/WEB-INF/jspSivut/tietoa/index.html</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>yhteystiedotsivu</servlet-name>
        <jsp-file>/WEB-INF/jspSivut/yhteystiedot/index.html</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>asiakaspalstasivu</servlet-name>
        <jsp-file>/WEB-INF/jspSivut/asiakaspalsta/index.html</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>singINsivu</servlet-name>
        <jsp-file>/WEB-INF/jspSivut/singIN/index.html</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>unohtunutsssivu</servlet-name>
        <jsp-file>/WEB-INF/jspSivut/singIN/unohtunutss/index.html</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>singupsivu</servlet-name>
        <jsp-file>/WEB-INF/jspSivut/singIN/singup/index.html</jsp-file>
    </servlet>
        
        
    <servlet-mapping>
        <servlet-name>ostasivu</servlet-name>
        <url-pattern>/osta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>airosivu</servlet-name>
        <url-pattern>/osta/varusteet/airo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ayskarisivu</servlet-name>
        <url-pattern>/osta/varusteet/ayskari</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>vissysivu</servlet-name>
        <url-pattern>/osta/varusteet/vissypullo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>tietoasivu</servlet-name>
        <url-pattern>/tietoa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>yhteystiedotsivu</servlet-name>
        <url-pattern>/yhteystiedot</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>asiakaspalstasivu</servlet-name>
        <url-pattern>/asiakaspalsta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>singINsivu</servlet-name>
        <url-pattern>/singIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>unohtunutsssivu</servlet-name>
        <url-pattern>/singIn/unohtunutss</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>singupsivu</servlet-name>
        <url-pattern>/singIn/singup</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
